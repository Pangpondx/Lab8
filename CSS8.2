@import url('https://fonts.googleapis.com/css2?family=Monserrat&display=swap');
body{
    background-image: linear-gradient(#636162, #b1afaf);
    height: 122vh;
    font-weight: bold;
    letter-spacing: 2px;
}
*{
    margin: 0px; padding: 0px; font-family: 'Montserrat', sans-serif;
}
.main{
    background-color: white;
    height: 94%;
    width: 650px;
    position: absolute;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 60%;
}
.Left{
    background-color: #fbb03b;
    width: 240px;
    height: 100%;
    float: left;
}
.Right{
    background-color: white;
    height: 90%;
    margin-left: 39%;
}
.profile-img img {
    border: 3px solid black;
    max-width: 58%;
    border-radius: 100%;
    max-height: 58%; 
    display: block; 
    margin: 0px 0px 15px 50px;
}
.box-1{
    position: relative;
}
.heading{
    background-color: #4d4d4d;
    padding: 10px;
    color: #fbb03b;
    text-align: left;
    padding-left: 20px;
    margin-right: -15px;
}
.heading::after{
    content: '';
    position: absolute;
    width: 21px;
    height: 18px;
    background-color:#5a5959;
    left: 230px;
    top: 26px;
    transform:rotate(56deg);
    z-index: -1;
}
.p1{
    padding: 9px 10px;
    font-size: 11px;
}
.icons1{
    font-size: 16px!important;
    padding-right: 10px!important;
    vertical-align: sub;
}
.skill-container{
    width: 90%;
    background-color: #4d4d4d;
    margin: 0px 10px;
}
.skill{
    text-align: right;
    padding-top: 2px;
    padding-bottom: 2px;
    color: white;
}
.js{
    width: 93%;
    background-color: white;
}
.py{
    width: 90%;
    background-color: white;
}
.html{
    width: 88%;
    background-color: white;
}
.css{
    width: 85%;
    background-color: white;
}
.php{
    width: 83%;
    background-color: white;
}
.java{
    width: 99%;
    background-color: white;
}
.c{
    width: 95%;
    background-color: white;
}
.web{
    width: 82%;
    background-color: white;
}
.game{
    width: 95%;
    background-color: white;
}
.name-div h1{
    margin-top: 30px;
    margin-bottom: 10px;
    font-size: 1.4em;
    margin-left: 10;
}
.name-div p{
    text-align: center;
}
.box-2{
    padding: 0px 50px;
    margin-top: 25px;
}
.p2{
    font-size: 10px;
    font-weight: 300;
    letter-spacing: 1px;
    word-spacing: 2px;
    line-height: 18px;
    margin-top: 5px;
}
h2{
    font-size: 16px;
    margin-bottom: 15px;
}
.icon3{
    vertical-align: bottom;
    font-size: 21px!important;
    color: #4d4d4d;
}
.p3{
    font-size: 13px;
    word-spacing: 1px;
    letter-spacing: 0px;
    margin-top: 10px;
}
.p3 span{
    color: #ff9b00; padding-left: 20px;
}
